<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.Boilernet.SubActivity">
    <!-- TextView -->
    <TextView
        android:id="@+id/text_view_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:scrollbars="vertical"
        android:text="이곳에 텍스트를 표시합니다."
        app:layout_constraintBottom_toTopOf="@+id/button_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 버튼 그룹 -->
    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_content">

        <!-- 버튼 1: 재생 -->
        <Button
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재생" />

        <!-- 버튼 2: 일시정지 -->
        <Button
            android:id="@+id/btn_pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일시정지" />

        <!-- 버튼 3: 정지 -->
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정지" />

        <!-- 버튼 4: 전 기사 읽기 -->
        <Button
            android:id="@+id/btn_read_previous_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전 기사 읽기" />

        <!-- 버튼 5: 돌아가기 -->
        <Button
            android:id="@+id/btn_go_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="돌아가기" />

        <!-- 버튼 6: 음성 인식 -->
        <Button
            android:id="@+id/btn_start_voice_recognition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음성 인식" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
